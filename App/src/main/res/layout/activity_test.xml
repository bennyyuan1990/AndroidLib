<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.benny.baselib.view.progress.ArcProgress
        android:id="@+id/activity_test_arc_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.benny.baselib.view.text.ColorTrackTextView
        android:id="@+id/activity_test_color_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试文本哦，ABCD,1234567890" />

    <com.benny.baselib.view.list.LetterSideBar
        android:id="@+id/activity_test_letter_side_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:barPressColor="@color/colorPrimary"
        app:barTextColor="@color/colorAccent"
        app:barTextSize="18sp" />

</LinearLayout>