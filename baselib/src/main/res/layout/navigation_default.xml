<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="8dp"
  android:paddingRight="8dp"
  android:gravity="center_vertical">


  <ImageView
    android:id="@+id/navigation_default_left_icon_iv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:minHeight="40dp"
    android:minWidth="40dp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/navigation_default_left_title_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignWithParentIfMissing="true"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@id/navigation_default_left_icon_iv"
    android:visibility="gone"
    tools:text="左标题" />


  <TextView
    android:id="@+id/navigation_default_center_title_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="gone"
    tools:text="标题" />

  <ImageView
    android:id="@+id/navigation_default_right_icon_iv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:minHeight="40dp"
    android:minWidth="40dp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/navigation_default_right_title_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignWithParentIfMissing="true"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@id/navigation_default_right_icon_iv"
    android:visibility="gone"
    tools:text="左标题" />

</RelativeLayout>