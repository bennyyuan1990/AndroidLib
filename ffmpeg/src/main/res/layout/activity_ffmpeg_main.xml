<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
      android:id="@+id/ffmpeg_Protocol"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Protocol" />

    <Button
      android:id="@+id/ffmpeg_AVFormat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="AVFormat" />

    <Button
      android:id="@+id/ffmpeg_AVCodec"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="AVCodec" />

    <Button
      android:id="@+id/ffmpeg_AVFilter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="AVFilter" />

    <Button
      android:id="@+id/ffmpeg_Configure"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Protocol" />
  </LinearLayout>


  <TextView
    android:id="@+id/ffmpeg_Content_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

</LinearLayout>
